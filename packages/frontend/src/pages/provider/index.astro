---
import Layout from "../../layouts/Layout.astro";
import {ActionPanel} from "@/components/ActionPanel";
import { SheetFormProvider } from "@/components/SheetForms/SheetFormProvider";
import { serverApp } from "@/lib/serverAPI";
import { providerColumns } from "@/config/ProviderColumnConfig";
import { ProviderPageManager } from "@/components/PageManager/ProviderPageManager";
import { requireAuth } from "@/lib/requireAuth";
import { Truck } from "lucide-react";

const session = await requireAuth(Astro);
if (!session) return Astro.redirect("/login");
const { auth, cookieHeader } = session;
const authed = { headers: { cookie: cookieHeader } };

const response = await serverApp.provider.all.get({ query: { is_deleted: false }});
const data = Array.isArray(response.data)
    ? response.data
    : [];

---

<Layout title="Proveedores" user={auth.user}>

    <h1 class="w-full text-3xl text-gray-700 font-bold mt-5">Proveedores</h1>
    <p class="mb-5 text-sm text-gray-600 font-medium">Proveedores asociados a la empresa</p>

  <ProviderPageManager
    client:load
    initialData={data}
    columns={providerColumns}
  />

  <div class="justify-center mt-24 lg:mt-20 hidden md:block" slot="tercer-columna">
    <ActionPanel client:load />
  </div> 

  <div
    class="group fixed right-10 bottom-10 z-30"
  >
    <span 
      class="absolute bottom-full right-0 mb-2 whitespace-nowrap rounded-md border bg-white px-4 py-2 
            text-sm font-medium text-black shadow-lg
            opacity-0 scale-95 transition-all duration-200 
            group-hover:opacity-100 group-hover:scale-100
            pointer-events-none"
    >
      Nuevo Proveedor
    </span>

    <button
      id="btn-new-provider"
      type="button"
      class="flex justify-center items-center h-16 w-16 rounded-full bg-white text-gray-500 hover:bg-mainColor hover:opacity-90 hover:text-white text-3xl shadow-lg"
    >
      <Truck />
    </button>


    <SheetFormProvider zIndex={60} client:load/>
  </div>

</Layout>

<script is:inline>
document.getElementById("btn-new-provider")?.addEventListener("click", () => {
    window.dispatchEvent(new CustomEvent("open-new-provider"));
});
</script>
