---
import LayoutLanding from "@/layouts/LayoutLanding.astro";
import SignupForm from "@/components/Signup/SignupForm";
---

<LayoutLanding title="Crear cuenta - Zuma+">
  <main class="mx-auto max-w-lg px-4 py-14">
    <h1 class="text-3xl font-black tracking-tight">Empezá tu prueba gratis</h1>
    <p class="mt-2 text-sm text-zinc-600">
      7 días gratis. Sin tarjeta. Cancelá cuando quieras.
    </p>

    <div class="mt-6">
      <SignupForm client:load />
    </div>
  </main>
</LayoutLanding>
