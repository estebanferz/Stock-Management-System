---

import Layout from "../../layouts/Layout.astro";
import { DataTableDemo } from "@/components/Table.tsx";
import { SheetFormSale } from "@/components/SheetForms/SheetFormSale";

---

<Layout title="StockManagement">
    <h1 class="w-full text-center text-4xl text-gray-700 font-bold my-5">Ventas</h1>
    <DataTableDemo client:visible />
    <div class="group absolute bottom-10 right-10">
        <span 
        class="absolute bottom-full right-0 mb-2 whitespace-nowrap rounded-md bg-white px-4 py-2 
           text-sm font-medium text-black shadow-lg
           opacity-0 scale-95 transition-all duration-200 
           group-hover:opacity-100 group-hover:scale-100
           pointer-events-none"
        >
        Nueva Venta
        </span>
        <SheetFormSale client:load/>
    <div>
</Layout>