---

import Layout from "../../layouts/Layout.astro";
import { SheetFormSeller } from "@/components/SheetForms/SheetFormSeller";
import { serverApp } from "@/lib/serverAPI";
import { sellerColumns } from "@/config/SellerColumnConfig";
import ActionPanel from "@/components/ActionPanel";
import { SellerPageManager } from "@/components/PageManager/SellerPageManager";
import { requireAuth } from "@/lib/requireAuth";
import { User } from "lucide-react";
import { SellerMetricsOverview } from "@/components/SellerMetricsOverview";
import { SellerLeaderboard } from "@/components/SellerLeaderboard";
const session = await requireAuth(Astro);
if (!session) return Astro.redirect("/login");
const { auth, cookieHeader } = session;
const authed = { headers: { cookie: cookieHeader } };

const response = await serverApp.seller.all.get({ ...authed, query: { is_deleted: false } });
const data = Array.isArray(response.data)
    ? response.data
    : [];

---

<Layout title="Vendedores" user={auth.user}>
    <h1 class="w-full text-3xl text-gray-700 font-bold mt-5">Vendedores</h1>
    <p class="mb-5 text-sm text-gray-600 font-medium">Vendedores asociados a la empresa</p>

    <SellerMetricsOverview client:load />
    <SellerLeaderboard role={auth.roleInTenant} client:load />
    
    <SellerPageManager
        client:load
        initialData={data}
        columns={sellerColumns}
    />



    <div class="justify-center mt-24 lg:mt-20 hidden md:block" slot="tercer-columna">
        <ActionPanel client:load />
    </div>

    <div
        class="group fixed right-10 bottom-10 z-30"
    >
        <span 
        class="absolute bottom-full right-0 mb-2 whitespace-nowrap rounded-md border bg-white px-4 py-2 
                text-sm font-medium text-black shadow-lg
                opacity-0 scale-95 transition-all duration-200 
                group-hover:opacity-100 group-hover:scale-100
                pointer-events-none"
        >
        Nuevo Vendedor
        </span>

            <button
                id="btn-new-seller"
                type="button"
                class="flex justify-center items-center h-16 w-16 rounded-full bg-white text-gray-500 hover:bg-mainColor hover:opacity-90 hover:text-white text-3xl shadow-lg"
            >
                <User />
            </button>

        <SheetFormSeller zIndex={60} client:load/>
    </div>
</Layout>

<script is:inline>
document.getElementById("btn-new-seller")?.addEventListener("click", () => {
    window.dispatchEvent(new CustomEvent("open-new-seller"));
});
</script>