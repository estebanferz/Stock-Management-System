---

import Layout from "../../layouts/Layout.astro";
import { SheetFormSeller } from "@/components/SheetForms/SheetFormSeller";
import { serverApp } from "@/lib/serverAPI";
import { sellerColumns } from "@/config/SellerColumnConfig";
import ActionPanel from "@/components/ActionPanel";
import { SellerPageManager } from "@/components/PageManager/SellerPageManager";

const response = await serverApp.seller.all.get({ query: { is_deleted: false } });
const data = response.data || [];

---

<Layout title="Vendedores">
    <h1 class="w-full text-center text-4xl text-gray-700 font-bold my-5">Vendedores</h1>
    
    <SellerPageManager
        client:load
        initialData={data}
        columns={sellerColumns}
    />
    <div class="m-4 mt-20" slot="tercer-columna">
        <ActionPanel client:load />
    </div>

    <div class="group absolute bottom-10 right-10">
        <span 
        class="absolute bottom-full right-0 mb-2 whitespace-nowrap rounded-md border bg-white px-4 py-2 
           text-sm font-medium text-black shadow-lg
           opacity-0 scale-95 transition-all duration-200 
           group-hover:opacity-100 group-hover:scale-100
           pointer-events-none"
        >
        Nuevo Vendedor
        </span>
        <SheetFormSeller client:load/>
    </div>
</Layout>