---
import { ArrowLeft, ArrowLeftIcon, ArrowLeftToLine } from 'lucide-react';
import background from '../assets/background.svg';
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Perfil</title>
    <link rel="icon" href="/favicon-32x32.png" />
  </head>

  <body class="min-h-screen bg-muted/40 mx-5">
    <img id="background" src={background.src} alt="" fetchpriority="high" />

    <a
      href="/"
      class="hidden lg:fixed lg:left-10 lg:top-10 lg:z-50 w-44 lg:inline-flex items-center gap-2 rounded-xl border bg-white px-4 py-4 text-sm font-medium text-slate-800 shadow-md backdrop-blur transform duration-200 hover:bg-mainColor hover:text-white"
    >
      <ArrowLeft />
      Dashboard
    </a>

    <div class="min-h-screen">
      <main class="mx-auto w-full lg:w-1/2 py-4 md:px-8">
        <header class="mb-6 flex flex-row justify-between items-center">
          <div>
            <h1 class="text-3xl font-semibold tracking-tight text-slate-800">
              Configuración
            </h1>
            <p class="mt-1 text-sm text-slate-500">
              Gestión de tu cuenta y de tu empresa
            </p>
          </div>
          <a
            href="/"
            class="flex flex-row lg:hidden w-40 items-center gap-2 rounded-xl border bg-white px-4 py-4 text-sm font-medium text-slate-800 shadow-md backdrop-blur transform duration-200 hover:bg-mainColor hover:text-white"
          >
            <ArrowLeftToLine />
            Dashboard
          </a>
        </header>

        <!-- Main content -->
        <section class="min-w-0">
          <slot name="content" />
        </section>
      </main>
    </div>
  </body>
</html>

<style>
  #background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    filter: blur(100px);
  }
</style>
