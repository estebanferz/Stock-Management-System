---
import Header from '../components/Header.astro';
import '../styles/tailwind.css';
import background from '../assets/background.svg';

const { title, user } = Astro.props;
const dolarRes = await fetch("https://dolarapi.com/v1/dolares/blue");
const dolarBlue = await dolarRes.json();
---

<!doctype html>
<html class="scroll-smooth" lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/nowaste-icon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="min-h-screen w-full">
	  <Header user={user} dolarBlue={dolarBlue}/>
    <img id="background" src={background.src} alt="" fetchpriority="high" />
    <!-- Main content container -->
    <main class="min-h-screen w-full pt-[var(--header-height)]">
      <!-- Header container slot -->
      <slot name="header-container" />

      <!-- Main content area with column structure -->
      <div
        class="flex min-h-[calc(100vh-var(--header-height))] flex-col md:flex-row"
      >
        <!-- First column -->
        <div class="w-full p-2 md:w-1/12 lg:w-1/5 lg:p-4">
          <slot name="primer-columna">
            <!-- Contenido de la primera columna -->
          </slot>
        </div>

        <!-- Main content column -->
        <div class="relative w-full p-2 md:w-9/12 lg:w-3/5 md:p-4">
          <slot>
            <!-- Contenido principal -->
          </slot>
        </div>

        <!-- Third column -->
        <div class="w-full p-2 md:w-2/12 lg:w-1/5 lg:p-4">
          <slot name="tercer-columna">
            <!-- Contenido de la tercera columna -->
          </slot>
        </div>
      </div>
    </main>
  </body>
</html>


<style>
    :root {
      --header-height: 64px; /* ajustá según tu header real */
    }
	  #background {
		  position: fixed;
		  top: 0;
		  left: 0;
		  width: 100%;
		  height: 100%;
		  z-index: -1;
		  filter: blur(100px);
	  } 
</style>
