---
import Header from '../components/Header.astro';
import '../styles/tailwind.css';
import background from '../assets/background.svg';
import { requireAuth } from '@/lib/requireAuth';

const { title, user } = Astro.props;

const authRes = await requireAuth(Astro);
if (!authRes) return Astro.redirect("/login");

const { tenant, tenantSettings } = authRes.auth;

const tenantDisplayName =
  (tenantSettings?.business_name?.trim?.() ? tenantSettings.business_name : null)
  ?? (tenant?.name?.trim?.() ? tenant.name : null)
  ?? "Empresa"; //default

const tenantLogoUrl =
  (tenantSettings?.logo_url?.trim?.() ? tenantSettings.logo_url : null)
  ?? "/Suma-secondary.png"; // default

const dolarRes = await fetch("https://dolarapi.com/v1/dolares/blue");
const dolarBlue = await dolarRes.json();
---

<!doctype html>
<html class="scroll-smooth" lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="min-h-screen w-full">
	  <Header user={user} dolarBlue={dolarBlue} tenantDisplayName={tenantDisplayName} tenantLogoUrl={tenantLogoUrl}/>
    <img id="background" src={background.src} alt="" fetchpriority="high" />
    <!-- Main content container -->
    <main class="min-h-screen w-full pt-[var(--header-height)] p-3">
      <!-- Header container slot -->
      <slot name="header-container" />

      <!-- Main content area with column structure -->
      <div
        class="flex min-h-[calc(100vh-var(--header-height))] flex-col md:flex-row"
      >
        <!-- First column -->
        <div class="p-2 lg:w-1/6 md:p-4">
          <slot name="primer-columna">
            <!-- Contenido de la primera columna -->
          </slot>
        </div>

        <!-- Main content column -->
        <div class="relative w-full p-2 lg:w-5/6 md:p-4">
          <slot>
            <!-- Contenido principal -->
          </slot>
        </div>
      </div>
    </main>
  </body>
</html>


<style>
    :root {
      --header-height: 64px; /* ajustá según tu header real */
    }
	  #background {
		  position: fixed;
		  top: 0;
		  left: 0;
		  width: 100%;
		  height: 100%;
		  z-index: -1;
		  filter: blur(100px);
	  } 
</style>
