{
  "name": "backend",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "bun run --watch src/index.ts",
    "lint": "eslint .",
    "format": "prettier --write .",
    "generate": "bun drizzle-kit generate",
    "migrate": "bun drizzle-kit migrate",
    "docker:prod": "bun install && bun run build && ./build/server",
    "docker:dev": "bun install && bun dev",
    "build": "bun build src/index.ts --minify-whitespace --minify-syntax --target bun --compile --outfile ./build/server"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "@types/bun": "^1.3.1",
    "@types/pg": "^8.15.6",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.6",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/static": "^1.4.7",
    "@elysiajs/swagger": "^1.3.1",
    "@node-rs/argon2": "^2.0.2",
    "bcryptjs": "^3.0.3",
    "drizzle-orm": "^0.44.7",
    "drizzle-typebox": "^0.3.3",
    "elysia": "^1.4.16",
    "libphonenumber-js": "^1.12.25",
    "pg": "^8.16.3",
    "postgres": "^3.4.7"
  }
}
